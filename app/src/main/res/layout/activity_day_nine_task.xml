<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayNineTask">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/day9_viewPager"
        android:layout_width="match_parent"
        android:layout_height="500dp"></androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/day9_viewBinding_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewBinding"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:id="@+id/day9_dataBinding_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Data Binding" />


</RelativeLayout>