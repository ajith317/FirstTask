<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayFifteenTask">

    <EditText
        android:id="@+id/day15_amnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:visibility="visible"
        android:hint="Make payment"
        />
    <Button
        android:id="@+id/day15_pay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:visibility="visible"
        android:layout_below="@id/day15_amnt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/payPal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PayPal"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strip Pay"
        android:id="@+id/stripe_btn"
        android:layout_below="@id/payPal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>




</RelativeLayout>